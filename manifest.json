{
    "manifest_version": 2,
    "name": "ScryMagic",
    "description": "Mostra o menor e maior pre√ßo da LigaMagic diretamente no Scryfall",
    "version": "1.0",
    "icons": { 
        "16": "images/icon16.png",
        "48": "images/icon48.png",
       "128": "images/icon128.png" 
    },
    "permissions": [
        "activeTab",
        "https://www.ligamagic.com.br/*"
    ],
    "content_scripts": [
        {
            "run_at" :"document_end",
            "matches": ["https://scryfall.com/card/*"],
            "js": ["on_document_end.js"]
        }
    ],
    "externally_connectable": {
        "matches": ["https://scryfall.com/*"]
    }
  }